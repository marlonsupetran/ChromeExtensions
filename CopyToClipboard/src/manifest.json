{
  "name": "Copy to Clipboard",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Copies data from web pages to the clipboard.",
  "icons": {
    "19": "images/icon-19.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "*://*.linkedin.com/*",
    "background",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "*://*.google.com/",
    "debugger",
    "history",
    "idle",
    "management",
    "notifications",
    "pageCapture",
    "topSites",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "index.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}